<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CarActivity" >

    <ImageButton
        android:id="@+id/pictureBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_white"
        android:src="@drawable/ic_take_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_white"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_settings" />
	
	
	<TextView
        android:id="@+id/xPosDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/goLeftBtn"
        android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:layout_above="@+id/angleDisplay"
        android:background="@drawable/fieldset_white"
        android:text="x: 0.00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="#8f8f8f"/>
		
	<TextView
        android:id="@+id/yPosDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignTop="@+id/xPosDisplay"
        android:layout_marginBottom="10dp"
		android:layout_toRightOf="@+id/xPosDisplay"
        android:background="@drawable/fieldset_white"
        android:text="y: 0.00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="#8f8f8f"/>

	<ImageButton
	    android:id="@+id/goBackwardBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_toRightOf="@+id/goLeftBtn"
	    android:background="@drawable/round_button_white"
	    android:src="@drawable/ic_go_backward" />

	<ImageButton
	    android:id="@+id/goLeftBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_above="@+id/sensView"
	    android:layout_alignLeft="@+id/pictureBtn"
	    android:background="@drawable/round_button_white"
	    android:src="@drawable/ic_go_left" />

	<ImageButton
	    android:id="@+id/goForwardBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_above="@+id/goLeftBtn"
	    android:layout_toRightOf="@+id/goLeftBtn"
	    android:background="@drawable/round_button_white"
	    android:src="@drawable/ic_go_forward" />

	<ImageButton
	    android:id="@+id/goRightBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_below="@+id/goForwardBtn"
	    android:layout_toRightOf="@+id/goForwardBtn"
	    android:background="@drawable/round_button_white"
	    android:src="@drawable/ic_go_right" />

	<ImageButton
	    android:id="@+id/doStopBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_above="@+id/speedText"
	    android:layout_alignLeft="@+id/settingsBtn"
	    android:background="@drawable/round_button_red"
	    android:cropToPadding="true" />

	<ImageButton
	    android:id="@+id/honkBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_below="@+id/angleDisplay"
	    android:layout_toLeftOf="@+id/doStopBtn"
	    android:background="@drawable/round_button_white"
	    android:src="@drawable/ic_action_honk" />

	<ImageButton
	    android:id="@+id/doStopTurnBtn"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_below="@+id/honkBtn"
	    android:layout_toLeftOf="@+id/honkBtn"
	    android:background="@drawable/round_button_red"
	    android:cropToPadding="true" />

	<ImageView
	    android:id="@+id/sensView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/goBackwardBtn"
	    android:layout_toLeftOf="@+id/speedText"
	    android:src="@drawable/ic_going_forward" />

	<TextView
	    android:id="@+id/speedText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/sensView"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="25dp"
	    android:layout_toLeftOf="@+id/doStopTurnBtn"
	    android:background="@drawable/fieldset_white"
	    android:text="Stage: 0"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#8f8f8f"
	    android:textStyle="bold" />
	
	<CheckBox
	    android:id="@+id/RvacuumCheck"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/sensView"
	    android:layout_below="@+id/honkBtn"
	    android:text="RVacuum"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#8f8f8f"
	    android:textStyle="bold" />

	<CheckBox
	    android:id="@+id/LvacuumCheck"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/doStopTurnBtn"
	    android:layout_alignLeft="@+id/sensView"
	    android:text="LVacuum"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#8f8f8f"
	    android:textStyle="bold" />

	<Button
	    android:id="@+id/resetButton"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/xPosDisplay"
	    android:layout_alignLeft="@+id/xPosDisplay"
	    android:text="Reset" />

	<TextView
	    android:id="@+id/angleDisplay"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/goForwardBtn"
	    android:layout_alignLeft="@+id/xPosDisplay"
	    android:layout_marginBottom="31dp"
	    android:background="@drawable/fieldset_white"
	    android:text="0 Degree"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#8f8f8f"
	    android:textStyle="bold" />
	
</RelativeLayout>
